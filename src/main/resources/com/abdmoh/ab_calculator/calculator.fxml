<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox styleClass="custom-vbox" xmlns:fx="http://javafx.com/fxml" fx:controller="com.abdmoh.ab_calculator.CalculatorController">
    <Button onAction="#openWindow" fx:id="menu" text="Menu" />
    <TextField fx:id="text_field" GridPane.rowIndex="0" GridPane.columnSpan="4" />

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="operator-button" fx:id="left_bracket" text="(" />
        <Button onAction="#type" styleClass="operator-button" fx:id="right_bracket" text=")" />
        <Button onAction="#clear" styleClass="operator-button" fx:id="clear" text="AC" />
        <Button onAction="#deleteCharacter" styleClass="operator-button" fx:id="backspace" text="DEL" />
    </HBox>

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="operator-button" fx:id="inverse_log" text="10^" />
        <Button onAction="#type" styleClass="operator-button" fx:id="inverse_ln" text="e^" />
        <Button onAction="#type" styleClass="operator-button" fx:id="power" text="^" />
        <Button onAction="#type" styleClass="operator-button" fx:id="root" text="√" />
    </HBox>

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="custom-button" fx:id="pi" text="pi" />
        <Button onAction="#type" styleClass="custom-button" fx:id="e" text="e" />
        <Button onAction="#type" styleClass="operator-button" fx:id="square" text="^2" />
        <Button onAction="#type" styleClass="operator-button" fx:id="sqrt" text="2√" />
    </HBox>

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="custom-button" fx:id="seven" text="7" />
        <Button onAction="#type" styleClass="custom-button" fx:id="eight" text="8" />
        <Button onAction="#type" styleClass="custom-button" fx:id="nine" text="9" />
        <Button onAction="#type" styleClass="operator-button" fx:id="multiply" text="*" />
    </HBox>

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="custom-button" fx:id="four" text="4" />
        <Button onAction="#type" styleClass="custom-button" fx:id="five" text="5" />
        <Button onAction="#type" styleClass="custom-button" fx:id="six" text="6" />
        <Button onAction="#type" styleClass="operator-button" fx:id="divide" text="/" />
    </HBox>

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="custom-button" fx:id="one" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Button onAction="#type" styleClass="custom-button" fx:id="two" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Button onAction="#type" styleClass="custom-button" fx:id="three" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <Button onAction="#type" styleClass="operator-button" fx:id="add" text="+" GridPane.columnIndex="3" GridPane.rowIndex="4" />
    </HBox>

    <HBox styleClass="custom-hbox">
        <Button onAction="#type" styleClass="custom-button" fx:id="zero" text="0" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Button onAction="#type" styleClass="custom-button" fx:id="decimal_point" text="." GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Button onAction="#calculate" styleClass="custom-button" fx:id="equals" text="=" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <Button onAction="#type" styleClass="operator-button" fx:id="subtract" text="-" GridPane.columnIndex="3" GridPane.rowIndex="5" />
    </HBox>
</VBox>